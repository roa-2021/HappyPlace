{{> nav }}
<main>
  <form id="room-form" action="/makebooking" method="POST">
    <label class="form-heading">Select an area:</label>

    <!-- "rooms" will be an object of the rooms and all of their their details -->
    {{!-- can come back into here and change names of things to make them work no stress --}}
    {{#each rooms}}
    <div class="room-listing">
      <input type="radio" id="{{roomName}}" name="drone" value="{{roomName}}" checked>
      <label for="{{roomName}}">{{roomName}}</label>
    </div>
    {{/each}}

    <input class="button" type="submit" value="Book">
    <div class="spacer-10vh"></div>
  </form>
  <div class="spacer-10vh"></div>
</main>
{{> footer }}