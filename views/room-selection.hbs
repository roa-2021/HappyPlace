{{> nav }}
<main>
  <form id="room-form" action="/booking-summary" method="POST">
    <label class="form-heading">Select an area:</label>

    {{#each areas }}
    <div class="room-listing">
      <input type="radio" id="{{ name }}" name="room" value="{{ name }}" required>
      <label for="{{ name }}">{{ name }}</label>
    </div>
    {{/each }}

    <input class="button" type="submit" value="Book">
    <div class="spacer-10vh"></div>
  </form>
  <div class="spacer-10vh"></div>
</main>
{{> footer }}